<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
    <LinearLayout 
        android:id="@+id/slidelist_backview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/slidelist_frontview"
        android:layout_alignBottom="@+id/slidelist_frontview"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:background="#00ff00" >
	    <TextView 
	        android:id="@+id/back_textView"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:textSize="10sp"
	        android:text="Back"/>
	    <TextView 
	        android:id="@+id/view_profile"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:textSize="10sp"
	        android:text="View Profile"/>
	    <TextView 
	        android:id="@+id/block"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:textSize="10sp"
	        android:text="Block"/>
    </LinearLayout>
    
	<RelativeLayout 
	    android:id="@+id/slidelist_frontview"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="#FFF"
	    android:orientation="vertical"
	    android:padding="10dp" >
	
	    <RelativeLayout
	        android:id="@+id/listview_background"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="0dp"
	        android:orientation="horizontal" >
	
	        <RelativeLayout
	            android:id="@+id/inner_row"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal" >
	
	            <ImageView
	                android:id="@+id/imageView1"
	                android:layout_width="64dp"
	                android:layout_height="64dp"
	                android:padding="2dp" />
	            <!-- android:background="@drawable/chat_img_circle" -->
	
	            <!-- Artist Name -->
	
	            <TextView
	                android:id="@+id/front_textview"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignLeft="@+id/name"
	                android:layout_below="@+id/name"
	                android:layout_toRightOf="@+id/imageView1"
	                android:singleLine="true"
	                android:text="......"
	                android:textColor="#817B71"
	                android:textSize="14dp" />
	
	            <TextView
	                android:id="@+id/name"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentTop="true"
	                android:layout_marginLeft="10dp"
	                android:layout_marginTop="0dp"
	                android:layout_toRightOf="@+id/imageView1"
	                android:singleLine="true"
	                android:text="......"
	                android:textColor="#433F3A"
	                android:textSize="16dp"
	                android:textStyle="bold" 
	                android:paddingBottom="3dp"/>
	
	            <ImageView
	                android:id="@+id/chat_status_icon"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignBottom="@+id/name"
	                android:layout_alignParentRight="true"
	                android:paddingBottom="6dp" />
	            <!-- android:src="@drawable/chat_mobile"  -->
	
	            <TextView
	                android:id="@+id/status"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_above="@+id/age"
	                android:layout_marginRight="5dp"
	                android:layout_toLeftOf="@+id/chat_status_icon"
	                android:singleLine="true"
	                android:text="MOBILE"
	                android:textColor="#B9B7B6"
	                android:textSize="12dp" 
	                android:paddingBottom="5dp"/>
	
	            <TextView
	                android:id="@+id/from"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignLeft="@+id/age"
	                android:layout_below="@+id/age"
	                android:singleLine="true"
	                android:text="TextView"
	                android:textColor="#817B71"
	                android:textSize="14dp" />
	        </RelativeLayout>
	    </RelativeLayout>
	
	</RelativeLayout>
    
    <!-- <RelativeLayout 
        android:id="@+id/swipelist_frontrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:background="#ff0000">
        <TextView 
	        android:id="@+id/front_textview"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        android:text="Front"/>
    </RelativeLayout> -->
    
</RelativeLayout>